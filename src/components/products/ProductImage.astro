---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { alt, className, src } = Astro.props;
const currentImage = src.startsWith("http")
  ? src
  : `${import.meta.env.PUBLIC_URL}/images/products/${src}`;
---

<img
  src={currentImage}
  alt={alt}
  class:list={[className]}
/>
